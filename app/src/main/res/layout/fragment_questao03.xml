<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questoesfragments.Questao03Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_enunciado03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="3. Qual das alternativas melhor classifica sua formação e experiência com
 o mercado financeiro?" />

        <RadioGroup
            android:id="@+id/rg_questao03"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rba_alternativa03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:text="Não possuo formação acadêmica ou conhecimento do mercado financeiro" />

            <RadioButton
                android:id="@+id/rbb_alternativa03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:text="Possuo formação acadêmica na área financeira, mas não tenho experiência
com o mercado financeiro" />

            <RadioButton
                android:id="@+id/rbc_alternativa03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:text="Possuo formação acadêmica em outra área, mas possuo conhecimento do
mercado financeiro" />

            <RadioButton
                android:id="@+id/rbd_alternativa03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:text="Possuo formação acadêmica na área financeira ou pleno conhecimento do
mercado financeiro" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmar_questao03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:text="confirmar" />


    </LinearLayout>



</FrameLayout>